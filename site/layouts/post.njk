---
layout: base.njk
templateClass: tmpl-post
---
<div class="my-3 is-size-7">{{ date | friendlyDate }}</div>

<main class="content my-3">
{{ content | safe }}
</main>

<hr>

<div class="columns pb-5">
  <div class="column is-size-7 py-0">
  {%- set previousPost = collections.posts | getPreviousCollectionItem(page) %}
{%- if previousPost %}Previous: <a href="{{ previousPost.url | url }}">{{ previousPost.data.title }}</a>{% endif %}
  </div>
  <div class="column has-text-right is-size-7 py-0">
  {%- set nextPost = collections.posts | getNextCollectionItem(page) %}
{%- if nextPost %}Next: <a href="{{ nextPost.url | url }}">{{ nextPost.data.title }}</a>{% endif %}
  </div>
</div>
