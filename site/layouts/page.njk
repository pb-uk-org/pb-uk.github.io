---
layout: base.njk
---

<nav class="breadcrumb my-3 is-size-7" aria-label="breadcrumbs">
  <ul>
{% for crumb in (page | getBreadcrumbs) %}
  {% if loop.last %}
    {# <li class="is-active"><a href="." aria-current="page">{{ crumb.text }}</a></li> #}
  {% else %}
    {% if loop.first %}
      <li>In <a class="px-1" href="{{ crumb.url }}">{{ crumb.text }}</a></li>
    {% else %}
      <li><a class="px-1" href="{{ crumb.url }}">{{ crumb.text }}</a></li>
    {% endif %}
  {% endif %}
{% endfor %}
  </ul>
</nav>

<main class="content">
{{ content | safe }}
</main>
<hr>
<div class="columns pb-5">
  <div class="column is-size-7 py-0">
{%- set previousPost = collections.pages | getPreviousCollectionItem(page) %}
{%- if previousPost %}Previous: <a href="{{ previousPost.url | url }}">{{ previousPost.data.title }}</a>{% endif %}
  </div>
  <div class="column has-text-right is-size-7 py-0">
{%- set nextPost = collections.pages | getNextCollectionItem(page) %}
{%- if nextPost %}Next: <a href="{{ nextPost.url | url }}">{{ nextPost.data.title }}</a>{% endif %}
  </div>
</div>
